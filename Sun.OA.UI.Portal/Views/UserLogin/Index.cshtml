@{
    ViewBag.Title = "用户登录";
}

<style type="text/css">
    html {
        width: 100%;
        height: 100%;
        overflow: hidden;
        font-style: sans-serif;
        
    }

    body {
        width: 100%;
        height: 100%;
        font-family: 'Open Sans',sans-serif;
        margin: 0;
        background-image:url(/Content/image/Home/7-2.jpg);
    }

    #login {
        position: absolute;
        top: 50%;
        left: 50%;
        margin: -150px 0 0 -150px;
        width: 300px;
        height: 300px;
    }

        #login h1 {
            color: #fff;
            text-shadow: 0 0 10px;
            letter-spacing: 1px;
            text-align: center;
        }

    h1 {
        font-size: 2em;
        margin: 0.67em 0;
    }

    input {
        width: 278px;
        height: 18px;
        margin-bottom: 10px;
        outline: none;
        padding: 10px;
        font-size: 13px;
        color: #fff;
        /*text-shadow: 1px 1px 1px;*/
        border-top: 1px solid #312E3D;
        border-left: 1px solid #312E3D;
        border-right: 1px solid #312E3D;
        border-bottom: 1px solid #56536A;
        border-radius: 4px;
        background-color: #2D2D3F;
    }

    .but {
        width: 300px;
        min-height: 20px;
        display: block;
        background-color: #4a77d4;
        border: 1px solid #3762bc;
        color: #fff;
        padding: 9px 14px;
        font-size: 15px;
        line-height: normal;
        border-radius: 5px;
        margin: 0;
    }
</style>

<script src="~/Scripts/jquery-1.8.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#imgCode").click(changeCheckCode);
    });
    //更换验证码图片
    function changeCheckCode() {
        var old = $("#imgCode").attr("src");
        var now = new Date();
        var str = old + now.getDate() + now.getHours() + now.getMinutes() + now.getSeconds();
        $("#imgCode").attr("src", str)
    }
    //登录成功后的处理方法
    function afterSuccess(data) {
        if (data == "ok") {
            window.location.href = "/Home/Index";
        } else {
            alert(data);
            changeCheckCode();
        }
    }
</script>

@using (Ajax.BeginForm("ProcessLogin", "UserLogin", new AjaxOptions() { OnSuccess = "afterSuccess" }))
{
    <div id="login">
        <h1>登录系统</h1>

        <input type="text" placeholder="用户名" name="uName" />
        <input type="password" placeholder="密码" name="uPassword" />
        <table>
            <tr>
                <td><input style="width:100px" type="text" placeholder="验证码" name="vCode" /></td>
                <td><img id="imgCode" src="/UserLogin/ShowCode?id=2" /></td>
                <td><a style="color:white" onclick="changeCheckCode()" href="">看不清楚,下一张</a></td>
            </tr>
        </table>
        <button class="but" type="submit">登录</button>

    </div>
}

